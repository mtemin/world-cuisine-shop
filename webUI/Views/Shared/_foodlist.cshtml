@model Food

<div class="card py-4 is-showdow-2xl is-shadow-none is-cursor-pointer transform is-duration-500 hover-translate-y">
  @* <a asp-controller="Foods" asp-action="Details" asp-route-id="@Model.FoodId"> *@
  <div class="card-image p-3">
    <figure class="image is-square">
      <img class="is-img-center" style="object-fit: cover;" src="~/img/@Model.ImgSrc" alt="Placeholder image">
    </figure>
  </div>
  <div class="card-content py-5">
    <div class="content">
      @* <h3 class="is-size-6 has-text-info">Hot Collection</h3> *@
      <h2 class="my-2">@Model.Name</h2>
      <p style="max-width:250px;text-overflow: ellipsis;white-space: nowrap; overflow: hidden;" class="mb-4 ">
        @Model.Description
      </p>
      <p class="is-size-5 has-text-weight-bold mb-5">@Model.Price moneyunit?</p>
      <form method="POST" asp-controller="foods" asp-action="Delete" asp-route-id="@Model.FoodId">
        <input type="hidden" name="FoodId" value="@Model.FoodId">
        <button type="submit" class="button is-danger">Delete</button>
      </form>
      @* <a asp-controller="foods" asp-action="delete" asp-route-id="@Model.FoodId" class="button is-danger">Delete</a>
      *@
      <a asp-controller="foods" asp-action="edit" asp-route-id="@Model.FoodId"
        class="button is-info has-text-black mt-auto"> Edit
      </a>
      @* <a href="/foods/@Model.FoodId" class="button is-danger has-text-black mt-auto">y Delete </a> *@
    </div>
  </div>
  @* </a> *@
</div>
