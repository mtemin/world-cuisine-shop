@model Food
@{
  string moneyUnit = "";
}
@if (@Model.Country == "Türkiye")
{
  moneyUnit = "₺";
}
else if (@Model.Country == "Japan")
{
  moneyUnit = "¥";
}
else if (@Model.Country == "Finland")
{
  moneyUnit = "€";
}
else
{
  moneyUnit = "";
}

<div
  class="card is-variable column m-4 button py-4 is-shadow-2xl is-shadow-none is-cursor-pointer transform is-duration-500 hover-translate-y ">
  <div class="card-image p-3">
    <figure class="image is-square">
      <img class="is-img-center" style="object-fit: cover;" src="~/img/@Model.ImgSrc" alt="Placeholder image">
    </figure>
  </div>
  <div class="card-content py-5">
    <div class="content">
      <h2 class="my-2">@Model.Name</h2>
      <p style="max-width:250px;text-overflow: ellipsis;white-space: nowrap; overflow: hidden;" class="mb-4 ">
        @Model.Description
      </p>
      <p class="is-size-5 has-text-weight-bold mb-5">@Model.Price @moneyUnit</p>


    </div>

  </div>
  <footer class="card-footer mt-auto" style="border:0;">
    <a asp-controller="foods" asp-action="edit" asp-route-id="@Model.FoodId"
      class="card-footer-item py-1 mr-3 button is-info"> Edit
    </a>
    <form class="button is-danger card-footer-item py-1  " method="POST" asp-controller="foods" asp-action="Delete"
      asp-route-id="@Model.FoodId">
      <input type="hidden" name="FoodId" value="@Model.FoodId">
      <button type="submit" class=" is-fullwidth">Delete</button>
    </form>

  </footer>
</div>
